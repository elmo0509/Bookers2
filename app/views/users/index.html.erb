<div class= "container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">

      <%= render 'users/info', user: @user %>

      <div class="row">
        <%= link_to edit_user_path(@loginuser), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <%= render 'books/new', book: @book %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>

      <table class="table">
        <thead>

          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>

        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td><%= link_to "show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>